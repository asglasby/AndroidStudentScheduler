        <TextView
            android:id="@+id/courseId"
            android:layout_width="169dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="CourseID"
            android:textSize="20sp" />
        -->

    </LinearLayout>

</android.support.constraint.ConstraintLayout>