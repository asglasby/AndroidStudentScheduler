<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/assessment_title_txt"
            android:layout_width="144dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="@string/assessment_title"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/assessment_type_txt"
            android:layout_width="134dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="@string/assessment_type"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/assessment_date_txt"
            android:layout_width="112dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="@string/assessment_date"
            android:textSize="15sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>