<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorAssessmentActivity">

    <EditText
        android:id="@+id/assessment_title_txt"
        android:layout_width="308dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="@string/assessment_title"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/assessment_type_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/assessment_type_txt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="114dp"
        android:ems="10"
        android:hint="Assessment Type"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/course_id_txt"
        app:layout_constraintEnd_toEndOf="@+id/assessment_title_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deletebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:onClick="deleteAssessment"
        android:text="Delete"
        app:layout_constraintStart_toEndOf="@+id/updatebtn"
        app:layout_constraintTop_toBottomOf="@+id/course_id_txt" />

    <EditText
        android:id="@+id/assessment_date_txt"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Assessment Date"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/course_id_txt"
        app:layout_constraintEnd_toEndOf="@+id/assessment_type_txt"
        app:layout_constraintStart_toStartOf="@+id/assessment_type_txt"
        app:layout_constraintTop_toBottomOf="@+id/assessment_type_txt" />

    <EditText
        android:id="@+id/course_id_txt"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="274dp"
        android:ems="10"
        android:hint="Course Id"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/updatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="updateAssessment"
        android:text="Update"
        app:layout_constraintBaseline_toBaselineOf="@+id/deletebtn"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>